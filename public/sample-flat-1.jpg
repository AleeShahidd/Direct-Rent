  <rect x="80" y="70" width="25" height="25" fill="#87CEEB" stroke="#000" stroke-width="1"/>
  <rect x="115" y="70" width="25" height="25" fill="#87CEEB" stroke="#000" stroke-width="1"/>
  
  <rect x="180" y="70" width="25" height="25" fill="#87CEEB" stroke="#000" stroke-width="1"/>
  <rect x="215" y="70" width="25" height="25" fill="#87CEEB" stroke="#000" stroke-width="1"/>
  
  <rect x="280" y="70" width="25" height="25" fill="#87CEEB" stroke="#000" stroke-width="1"/>
  <rect x="305" y="70" width="20" height="25" fill="#87CEEB" stroke="#000" stroke-width="1"/>
  
  <!-- Lower windows -->
  <rect x="80" y="150" width="25" height="25" fill="#87CEEB" stroke="#000" stroke-width="1"/>
  <rect x="115" y="150" width="25" height="25" fill="#87CEEB" stroke="#000" stroke-width="1"/>
  
  <rect x="180" y="150" width="25" height="25" fill="#87CEEB" stroke="#000" stroke-width="1"/>
  <rect x="215" y="150" width="25" height="25" fill="#87CEEB" stroke="#000" stroke-width="1"/>
  
  <rect x="280" y="150" width="25" height="25" fill="#87CEEB" stroke="#000" stroke-width="1"/>
  <rect x="305" y="150" width="20" height="25" fill="#87CEEB" stroke="#000" stroke-width="1"/>
  
  <!-- Entrance -->
  <rect x="160" y="190" width="80" height="40" fill="#8B4513"/>
  <rect x="180" y="200" width="40" height="30" fill="#654321"/>
  
  <!-- Text -->
  <text x="200" y="280" font-family="Arial, sans-serif" font-size="14" fill="#333" text-anchor="middle">
    Modern London Flat
  </text>
